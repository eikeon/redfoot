  <server:PagePartHandler rdf:ID="css">
    <rdfs:label>Default css</rdfs:label>
    <server:content_type>text/css</server:content_type>
    <code:python rdf:datatype="http://redfoot.net/3.0/redfoot#Python">

TEMPLATE = redfoot.namespace("http://redfoot.net/3.0/template#")

color = lookup(TEMPLATE.background_color) or "#cccccc"

response.write("""

html {
    background-color: %(color)s;
    background: %(color)s url("http://redfoot.net/2005/fade-in-light.png") top left repeat-x;
}

body {
    margin: 0.5em 1em;
    padding: 0em;
    font-family: arial, helvetica, sans-serif;
}

#top h1 {
    margin-top: 0;
}

#content h2 { 
    margin: .5em 0; 
}

#edit_page {}
#edit_content {float: right;}

#container {
}

pre {
  background-color: #eeeeee;
  border: 1px solid black;
  padding: 0.5em 1em;
  white-space: -moz-pre-wrap; /* Mozilla */
  white-space: -hp-pre-wrap; /* HP printers */
  white-space: -o-pre-wrap; /* Opera 7 */
  white-space: -pre-wrap; /* Opera 4-6 */
  white-space: pre-wrap; /* CSS 2.1 */
  white-space: pre-line; /* CSS 3 (and 2.1 as well, actually) */
  word-wrap: break-word; /* IE */
}

#content {
    margin: 0px;
    margin-left: 7em;

    padding: 0 1em 1em 1em;

    border: 1px solid #758640;
    border: 1px solid black;

    background-color: #ffffff;
    background: #ffffff url("http://redfoot.net/2005/fade-out.png") bottom left repeat-x;

    min-height: 400px;
    min-width: 200px;
}
      
#usernav {
    float: right;
    background-color: transparent;
}

#usernav ul {
    margin: 0;
    padding: 0;
    display: inline;
    list-style: none;
}

#usernav li {
    display: inline;
    margin: 0;
    padding: 0;
}

#usernav li a, #header li a:visited {
    display: inline;
    font-weight: bold;
    padding: 0 1.5em;
    font-size: 0.8em;
}

#sitenav {
    float: left;
    width: 7em;
    margin: 0;
    text-align: right;
    padding: 0em;
    background-color: transparent;
}

#navlist {
    margin: 0;
    padding: 0;
    font-size: 0.8em;
    list-style-type: none;
}

#navlist li {
    padding: 0.1em 0;
}

#navlist a {    
    padding: 0.2em 0.5em 0.2em 0.5em;
}

#navlist a:link#current, #navlist a:visited#current {
    text-decoration: underline;
}

#navlist a:hover {
}

a {
    color: #000000;
    font-weight: bold;
    text-decoration: none
}

#content a {
    border-bottom: 1px dotted #fc6305;
}

a:hover {
    color: #fc6305;
    font-weight: bold;
    text-decoration: none
}

#footer {
    clear: both;
    margin: 1em;
    font-size: 0.6em;
    background-color: transparent;
    text-align: center;
}

#footer img {
    border: 0; 
    vertical-align: middle;
}

.log li h3 {
    margin-bottom: 0em;
}

.log {
    list-style: none;
    margin: 0;
    padding: 0;
}

.bookmarks li h3 {
    margin-bottom: 0em;
}

.bookmarks {
    list-style: none;
    margin: 0;
    padding: 0;
}

.meta {
    margin: 0;
    padding: 0;
    font-size: 0.8em;    
    color: gray;
}

.blog h3 {
    margin-bottom: 0;
}

""" % {"color": color})
    
    </code:python>
