<![CDATA[
# TODO: this is a bit out of hand :(

SERVER = redfoot.namespace("http://redfoot.net/2005/server#")

kid_module = redfoot.module(URIRef("modules/kid#module", base=redfoot_program))

# redefine lookup
def lookup(property, default=None, uri=None):
    return request.lookup(property, uri=uri) or redfoot.value(page_handler, property) or default

auth = redfoot.module(URIRef("modules/auth#module", base=redfoot_program))
def allow(uri):
    return auth.allow(request, uri)

def display_page(uri, output=None, **args):
    if not allow(request.uri):
        response.setStatus(403, "Forbidden")
    redfoot.check(uri)
    content_type = redfoot.value(uri, SERVER.content_type) or 'text/html; charset=UTF-8'
    if content_type=="application/xhtml+xml":
        content_type = "text/html" # For now don't worry about xhtml
    if "text/html" in content_type:
        output = "html-strict"
    else:
        output = "xml"
    response.setHeader('Content-Type', content_type)
    display(uri, output=output, **args)


mod_context = globals()

def _create_display(normal):
    """ 
    Due to the way kid works we can not serialize a template within a
    template directly to the output stream. Instead we have to return
    it as an element stream to the template it appears within. Hence
    the create_display level of complexity.

    See Also: http://www.kid-templating.org/trac/ticket/29
    """

    def _display(uri, output=None, **args):
        if uri:
            redfoot.check(uri)
            if not allow(uri):
                uri = lookup(SERVER.unauthorized_content_handler)
                assert uri, "No 'unauthorized_content' found for: %s" % uri
            context = dict(mod_context)
            context.update(args)

            value = redfoot.value(uri)
            if value and value.datatype==SERVER.Kid:
                mod = kid_module.get_kid_template(uri, value)
                context["display"] = kid_display
                t = mod.Template(**context)        
                if normal:
                    request.sources.append(uri)
                    try:
                        t.write(response, encoding="utf-8", fragment=True, output=output or "xml")
                    except Exception, e:
                        redfoot.log.exception("While handling request for '%s' and trying to display %s (%s) the following exception occurred:\n" % (request.uri, redfoot.label(uri), uri))
                    request.sources.pop()
                else:
                    # return ElementStream instead of writing directly to response
                    request.sources.append(uri)
                    def callback():
                        request.sources.pop()
                    return kid_module.CleanupElementStream(t.pull(), callback)
            else:
                request.sources.append(uri)
                redfoot.execute(uri, **context) 
                request.sources.pop()

                # Leaving this here for now in case we need the normal==False case here too
                # return iterator instead of writing directly to response
                #def d():
                #    request.sources.append(uri)
                #    display(uri, output=output, **args)
                #    request.sources.pop()
                #    if False:
                #        yield None
                #return d()
    return _display

display = _create_display(normal=True)
kid_display = _create_display(normal=False)

