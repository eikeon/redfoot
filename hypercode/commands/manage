  <commands:Command rdf:ID="rename">
    <rdfs:label>rename</rdfs:label>
    <redfoot:code>
     <redfoot:Python rdf:ID="rename_code">
       <rdf:value rdf:datatype="http://redfoot.net/2005/redfoot#Python">
<![CDATA[
    
OLD = args[0]
NEW = args[1]

# rename any occurrences in any context
for t, cg in list(redfoot.store.triples((None, None, None), None)):
    s, p, o = t
    if isinstance(s, URIRef) and OLD in s:
        ss = URIRef(s.replace(OLD, NEW))
    else:
        ss = s
    if isinstance(p, URIRef) and OLD in p:
        pp = URIRef(p.replace(OLD, NEW))
    else:
        pp = p
    if isinstance(o, URIRef) and OLD in o:
        oo = URIRef(o.replace(OLD, NEW))
    else:
        oo = o
    if (ss, pp, oo) != t:
        for c in list(cg):
            c.remove(t)
            c.add((ss, pp, oo))

# rename contexts (and checking again if there's any triples that need
# renaming... probably can/should get rid of this redundant bit)
for context in list(redfoot.contexts()):
    if OLD in context.identifier:
        new_context = redfoot.get_context(URIRef(context.identifier.replace(OLD, NEW)))
    else:
        new_context = context

    for s, p, o in context:
        context.remove((s, p, o))
        if isinstance(s, URIRef) and OLD in s:
            s = URIRef(s.replace(OLD, NEW))
        if isinstance(p, URIRef) and OLD in p:
            p = URIRef(p.replace(OLD, NEW))
        if isinstance(o, URIRef) and OLD in o:
            o = URIRef(o.replace(OLD, NEW))
        new_context.add((s, p, o))

    if new_context!=context:
        redfoot.remove_context(context.identifier)

]]>
       </rdf:value>
     </redfoot:Python>
    </redfoot:code>
  </commands:Command>

  <commands:Command rdf:ID="touch">
    <rdfs:label>touch</rdfs:label>
    <rdfs:comment>Modifies all SERVER.last_modified times to the current time.</rdfs:comment>
    <redfoot:code>
     <redfoot:Python rdf:ID="touch_code">
       <rdf:value rdf:datatype="http://redfoot.net/2005/redfoot#Python">
<![CDATA[
    
SERVER = redfoot.namespace("http://redfoot.net/2005/server#")

from time import time
now = Literal("%s" % time())

for (s, p, o), cg in redfoot.store.triples((None, SERVER.last_modified, None), None):
    for c in cg:
        c.remove((s, p, o))
        c.add((s, p, now))
]]>
