    uri = args[0]
except:
    uri = None
    print "usage: <uri> [<prefix>]" # [<new_prefix>]

if uri:
      if len(args)>1:
          startswith = args[1]
      else:
          startswith = ''

      g = Graph()
      g.load(uri)

      for context_id in g.subjects(RDF.type, REDFOOT.Context):
          if context_id.startswith(startswith):
              print "Copying:", context_id    
              context = redfoot.get_context(context_id, creator=redfoot_current)
              try:
                  context.load(context_id.concrete())
              except Exception, e:
                  print e

