	<td><input type="password" name="verify"/></td>
      </tr>
     <tr>    
       <th>&#160;</th>
       <td><input type="submit" value="create"/></td>
     </tr>
    </table>
    <input type="hidden" name="return_uri" value="${request.parameters.get('return_uri', '/account/')}"/>
